<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_meal_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caro.foodtrackerandroid.AddMealMainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter meal name"
        android:ems="10"
        android:id="@+id/editText" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="335dp"
        app:srcCompat="@drawable/defaultphoto"
        android:layout_marginTop="38dp"
        android:id="@+id/photoImageButton"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:onClick="addListenerOnButton"/>



    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:rating="0.0"
        android:isIndicator="false"
        android:stepSize="1.0" />



</LinearLayout>

</RelativeLayout>
